---
import "../styles/global.css";
import { TopNavigation } from "@/components/TopNavigation";

interface Props {
  title?: string;
}

const { title = "Fiszki" } = Astro.props;
const { user } = Astro.locals;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-border">
        <div class="container mx-auto px-4 py-4 flex items-center">
          <a href="/" class="text-xl font-bold hover:text-primary transition-colors">Fiszki</a>

          <div class="flex-1 flex justify-center">
            {user && <TopNavigation currentPath={currentPath} client:load />}
          </div>

          {
            user ? (
              <div class="flex items-center gap-4">
                <span class="text-sm text-muted-foreground">{user.email}</span>
                <button
                  id="logout-btn"
                  class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
                >
                  Wyloguj się
                </button>
              </div>
            ) : (
              <div class="flex gap-2">
                <a href="/auth/login" class="px-4 py-2 text-primary hover:underline transition-colors">
                  Zaloguj się
                </a>
                <a
                  href="/auth/register"
                  class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
                >
                  Zarejestruj się
                </a>
              </div>
            )
          }
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
      <footer class="border-t border-border py-6">
        <div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
          <p>&copy; 2025 Fiszki. Wszelkie prawa zastrzeżone.</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<script>
  const logoutBtn = document.getElementById("logout-btn");

  logoutBtn?.addEventListener("click", async () => {
    try {
      const response = await fetch("/api/auth/logout", {
        method: "POST",
      });

      if (response.ok) {
        window.location.href = "/";
      } else {
        // Log error for debugging
        console.error("Logout failed");
        alert("Nie udało się wylogować. Spróbuj ponownie.");
      }
    } catch (error) {
      // Log error for debugging
      console.error("Logout error:", error);
      alert("Wystąpił błąd podczas wylogowania.");
    }
  });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
