---
import Layout from "../../../../layouts/Layout.astro";
import ManualFlashcardView from "../../../../components/ManualFlashcardView.tsx";

export const prerender = false;

const { deckId } = Astro.params;

// Validate deckId exists
if (!deckId) {
  return Astro.redirect("/decks");
}
---

<Layout title="Utwórz nową fiszkę">
  <ManualFlashcardView client:load deckId={deckId} />
</Layout>
